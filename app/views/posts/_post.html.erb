  <span class='title'>
    <h3> <%= post.title %> </h3>
  </span>
  <span class="content">
    <%= post.content %>
  </span>
  <br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user == post.author %>
      <%= link_to "delete", post, method: :delete,
                                       data: { confirm: "Deletion is permanent. Are you sure?" } %>
    <% end %>
  </span>
  <br>